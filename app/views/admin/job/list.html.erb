<div id="login_main">
<h1>Listing jobs</h1>

<table width="10%">
  <tr>
  <% for column in Job.content_columns %>
    <th><%= column.human_name %></th>
  <% end %>
  </tr>
 <%= will_paginate @jobs%>
<% for job in @jobs %>
 <tr>
  <% for column in Job.content_columns %>
    <td><%=h job.send(column.name) %></td>
  <% end %>
    <td> <%= link_to 'Show', :action => 'show', :id => job %></td>
    <td><%= link_to 'Edit', :action => 'edit', :id => job %></td>
    <td><%= link_to 'Destroy', { :action => 'destroy', :id => job }, :confirm => 'Are you sure?' %></td>
  </tr>
<% end %>
</table>


<br />

<%= link_to 'New job', :action => 'new' %>
<%= link_to 'Back', :action => 'index' %>
</div>
